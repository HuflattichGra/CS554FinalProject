{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/[...slug].ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "functions": {
    "api/[...slug].ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "MONGO_URL": "@mongo_url",
    "MONGO_DB": "@mongo_db", 
    "REDIS_URL": "@redis_url",
    "SESSION_SECRET": "@session_secret"
  }
}